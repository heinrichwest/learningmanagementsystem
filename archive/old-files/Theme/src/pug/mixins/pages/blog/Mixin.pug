mixin BlogItem(config)
  .col-md-6.col-lg-4.h-100&attributes(attributes)
    a(href=`${CWD}pages/single-post.html`) 
      img(src=`${CWD}assets/img/blogs/${config.img}.jpg`, alt="").img-fluid.rounded-top
    .p-3.border.rounded-bottom.border-top-0
      h5.font-base.text-transform-none.fw-medium.lh-1
        a(href=`${CWD}pages/single-post.html`).text-black=config.title
      p=config.description
      a(href=`${CWD}pages/single-post.html`).text-dark.fw-semi-bold Read more
        span.fas.fa-angle-right.ms-1.text-900(data-fa-transform="down-2")
      hr
      .row.justify-content-between.align-items-center
        .col.pe-0
          .d-flex
            a(href='#!')
              img(src=`${CWD}assets/img/team/${config.avatar}.jpg`, width="40" height="40" alt="").rounded-circle
            .flex-1.ms-3
              h6.mb-0.fw-semi-bold.ls-1
                a(href="#!").text-dark=config.author
              p.mb-0=config.date
        .col-auto
          a(href="#!").mb-0.d-flex.align-items-center.d-block.text-800
            span.me-2=config.comment
            img(src=`${CWD}assets/img/line-icons/comment-inactive.svg`, width="15" alt="")

