              a(href=`${CWD}homes/text-left-classic-slider.html`).dropdown-item
                +cleanText('text-left-classic-slider')
              a(href=`${CWD}homes/video-background.html`).dropdown-item
                +cleanText('video-background')
              a(href=`${CWD}homes/video-classic.html`).dropdown-item
                +cleanText('video-classic')
              a(href=`${CWD}homes/gradient-background.html`).dropdown-item
                +cleanText('gradient-background')
              a(href=`${CWD}homes/gradient-classic.html`).dropdown-item
                +cleanText('gradient-classic')
          li.nav-item.dropdown
            a.nav-link.dropdown-toggle#navbarDropdownMenuLink2(href='#', data-bs-toggle='dropdown-on-hover', aria-haspopup='true', aria-expanded='false')
              span.nav-link-text
                +cleanText('pages')
            .dropdown-menu.dropdown-menu-end.dropdown-pages.py-3(aria-labelledby='navbarDropdownMenuLink2')
              .row
                each page, index in pages
                  .col-6.col-md-4.px-2
                    ul.nav.flex-column
                      each item, index in page
                        li.nav-item
