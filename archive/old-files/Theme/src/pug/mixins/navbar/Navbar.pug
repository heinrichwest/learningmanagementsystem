                            +cleanText(item.name)

          li.nav-item.dropdown
            a.nav-link.dropdown-toggle#navbarDropdownMenuLink3(href='#', data-bs-toggle='dropdown-on-hover', aria-haspopup='true', aria-expanded='false')
              span.nav-link-text
                +cleanText('components')
            .dropdown-menu.dropdown-menu-end.dropdown-components.py-3(aria-labelledby='navbarDropdownMenuLink3')
              .row
                each component, index in components
                  .col-6.col-md-3.px-2
                    ul.nav.flex-column
